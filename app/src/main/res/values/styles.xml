<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/text_size_medium_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>
